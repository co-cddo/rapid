{
	"name": "${localWorkspaceFolderBasename}",
	"build": {
		"dockerfile": "./Dockerfile",
		"context": "../",
		"args": {
			"local_config": "true"
		}
	},
	"runArgs": [
		"--name=${localWorkspaceFolderBasename}"
	],
	"mounts": [
		"type=bind,source=${localEnv:HOME}${localEnv:USERPROFILE}/.aws,target=/workspaces/.aws,consistency=cached"
	],
	"features": {
		"ghcr.io/devcontainers/features/git:1": {}
	  },
	"customizations": {
		"vscode": {
			"extensions": [
				"ms-python.python",
				"ms-toolsai.jupyter",
				"elagil.pre-commit-helper"
			]
		}
	},
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
	"workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached",
	"containerEnv": {
		"AWS_CONFIG_FILE": "/workspaces/.aws/config",
		"AWS_SHARED_CREDENTIALS_FILE": "/workspaces/.aws/credentials",
		"AWS_PROFILE": "default",
		"AWS_REGION": "eu-west-2",
		"PYTHONPATH": "/workspaces/${localWorkspaceFolderBasename}"
	},
	"postCreateCommand": "chmod -R +x ./.devcontainer && ./.devcontainer/postCreateCommand.sh",
	"postStartCommand": "./.devcontainer/postStartCommand.sh"
}